<UserControl x:Class="PruebaTecnica_MarcelaPrieto.CustomControl.PasswordInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PruebaTecnica_MarcelaPrieto.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <PasswordBox x:Name="txtPassword"
             FontSize="13"
             FontWeight="Medium"
             FontFamily="Montserrat"                            
             Foreground="#7A7A7A"
             CaretBrush="LightGray"
             BorderBrush="White"            
             Padding="39,0,0,0"
             VerticalContentAlignment="Center">

            <PasswordBox.Background>
                <ImageBrush ImageSource="/PruebaTecnica-MarcelaPrieto;component/Assets/password.png"
                        Stretch="None"
                        AlignmentX="Left"/>
            </PasswordBox.Background>
     </PasswordBox>
    
</UserControl>
